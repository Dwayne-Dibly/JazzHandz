<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/elementtimelabel"
        android:layout_width="80dip"
        android:layout_height="26dip"
        android:layout_alignParentBottom="false"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentTop="true"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Time (s)"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/elementbeatlabel"
        android:layout_width="50dip"
        android:layout_height="26dip"
        app:layout_constraintLeft_toRightOf="@id/elementtimelabel"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dip"
        android:text="Beat"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26dip"
        app:layout_constraintLeft_toRightOf="@id/elementbeatlabel"
        android:layout_alignParentTop="true"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Move"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/routineelementrecyclerview"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:paddingLeft="16dip"
        android:paddingRight="16dip"
        android:paddingTop="6dip"
        app:layout_constraintTop_toBottomOf="@id/elementbeatlabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

