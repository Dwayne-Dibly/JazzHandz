<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/top"
    android:layout_height="28dip"
    android:paddingTop="6dip"
    android:paddingLeft="40dip">


    <TextView
        android:id="@+id/elementtimegridview"
        android:layout_width="60dip"
        android:layout_height="22dip"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Elementtime Text"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/elementbeatgridview"
        android:layout_width="40dip"
        android:layout_height="22dip"
        android:layout_toEndOf="@id/elementtimegridview"
        android:layout_alignParentTop="true"

        android:layout_marginEnd="6dip"
        android:text="Beat"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/elementmovegridview"
        android:layout_width="wrap_content"
        android:layout_height="22dip"
        android:layout_toEndOf="@id/elementbeatgridview"
        android:layout_alignParentTop="true"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="ElementMove Text"
        android:textSize="16sp" />

</RelativeLayout>